# Huno CMake config file
#
# This file sets the following variables:
# Huno_FOUND - Always TRUE.
# Huno_INCLUDE_DIRS - Directories containing the Huno include files.
# Huno_IDL_DIRS - Directories containing the Huno IDL files.
# Huno_LIBRARIES - Libraries needed to use Huno.
# Huno_DEFINITIONS - Compiler flags for Huno.
# Huno_VERSION - The version of Huno found.
# Huno_VERSION_MAJOR - The major version of Huno found.
# Huno_VERSION_MINOR - The minor version of Huno found.
# Huno_VERSION_REVISION - The revision version of Huno found.
# Huno_VERSION_CANDIDATE - The candidate version of Huno found.

message(STATUS "Found Huno-@PROJECT_VERSION@")
set(Huno_FOUND TRUE)

find_package(<dependency> REQUIRED)

#set(Huno_INCLUDE_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@"
#    ${<dependency>_INCLUDE_DIRS}
#    )
#
#set(Huno_IDL_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@/idl")
set(Huno_INCLUDE_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@"
    ${<dependency>_INCLUDE_DIRS}
    )
set(Huno_IDL_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@/idl")


if(WIN32)
    set(Huno_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_STATIC_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
else(WIN32)
    set(Huno_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_SHARED_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
endif(WIN32)

set(Huno_DEFINITIONS ${<dependency>_DEFINITIONS})

set(Huno_VERSION @PROJECT_VERSION@)
set(Huno_VERSION_MAJOR @PROJECT_VERSION_MAJOR@)
set(Huno_VERSION_MINOR @PROJECT_VERSION_MINOR@)
set(Huno_VERSION_REVISION @PROJECT_VERSION_REVISION@)
set(Huno_VERSION_CANDIDATE @PROJECT_VERSION_CANDIDATE@)

